{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [{
      "include": "modules/mail/templates/**/*.hbs",
      "outDir": "dist/",
      "watchAssets": true
    }],
    "deleteOutDir": true,
    "plugins": ["@nestjs/swagger"]
  }
}
